{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "es5",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
